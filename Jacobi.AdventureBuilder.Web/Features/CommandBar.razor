<FluentOverflow>
    @foreach (var cmd in Commands)
    {
        <FluentOverflowItem Fixed="OverflowItemFixed.Ellipsis">
            <FluentBadge>
                <FluentStack Orientation="Orientation.Vertical">
                    <FluentButton OnClick="@(() => ExecuteCommandAsync(cmd.Id))">
                        @cmd.Name
                    </FluentButton>
                    @cmd.Description
                </FluentStack>
            </FluentBadge>
        </FluentOverflowItem>
    }
</FluentOverflow>