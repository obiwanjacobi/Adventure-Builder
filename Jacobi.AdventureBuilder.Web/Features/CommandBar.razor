<FluentOverflow>
    @foreach (var cmd in CommandInfos)
    {
        <FluentOverflowItem Fixed="OverflowItemFixed.Ellipsis">
            <FluentBadge>
                <FluentButton OnClick="@(() => ExecuteCommandAsync(cmd.Id))">
                    @cmd.Name
                </FluentButton>
                @cmd.Description
            </FluentBadge>
        </FluentOverflowItem>
    }
</FluentOverflow>